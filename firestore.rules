rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read any user document, but only write their own
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Recipes - users can only CRUD their own recipes
    match /recipes/{recipeId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow users to read/write their own votes
    match /votes/{voteId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow users to read/write matches
    match /matches/{matchId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow users to read/write couples
    match /couples/{coupleId} {
      allow read, write: if request.auth != null;
    }
  }
}