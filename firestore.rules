rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read any user document
    // Allow users to write their own document
    // Allow partner connection updates (when setting coupleId, partnerId, partnerName, connectedAt)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        // User can always update their own document
        request.auth.uid == userId ||
        // Allow partner connection: another user can update specific fields for pairing
        (
          // Only allow updating connection-related fields
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['coupleId', 'partnerId', 'partnerName', 'connectedAt', 'isPremium', 'trialEndDate']) &&
          // The requesting user must be setting themselves as the partner
          request.resource.data.partnerId == request.auth.uid
        ) ||
        // Allow partner disconnection: current partner can remove connection fields
        (
          // Only allow removing connection-related fields
          resource.data.diff(request.resource.data).affectedKeys()
            .hasOnly(['coupleId', 'partnerId', 'partnerName', 'connectedAt']) &&
          // The requesting user must be the current partner
          resource.data.partnerId == request.auth.uid
        )
      );
    }
    
    // Recipes - users can only CRUD their own recipes
    match /recipes/{recipeId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Allow users to read/write their own votes
    match /votes/{voteId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow users to read/write matches
    match /matches/{matchId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow users to read/write couples
    match /couples/{coupleId} {
      allow read, write: if request.auth != null;
    }
  }
}